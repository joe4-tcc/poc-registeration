<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeneralBranchAdmin" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="fontFamily">@font/din_regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Bold">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/primary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <!--    <style name="ChipCustomActionStyle" parent="Widget.MaterialComponents.Chip.Filter">-->
    <!--        <item name="checkedIcon">@drawable/radio_selected_ic_small</item>-->
    <!--        <item name="chipIconSize">@dimen/_12sdp</item>-->
    <!--    </style>-->

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">

    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/black</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/black</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grey
        </item>
    </style>
</resources>